<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtStepsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="342dp"
        android:gravity="center"
        android:text="Passos Hoje"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStepsGoalDescription2"
        app:layout_constraintEnd_toStartOf="@+id/stepsQtt"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStepsQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:text=""
        android:textColor="#51D609"
        android:textSize="56sp"
        app:layout_constraintStart_toStartOf="@+id/txtStepsGoalDescription1"
        app:layout_constraintTop_toBottomOf="@+id/txtStepsDescription" />

    <TextView
        android:id="@+id/txtStepsGoalDescription1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="33dp"
        android:text="Faltam"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStepsGoalQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtStepsGoalQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="11dp"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStepsGoalDescription2"
        app:layout_constraintEnd_toEndOf="@+id/txtStepsGoalDescription1" />

    <TextView
        android:id="@+id/txtStepsGoalDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="52dp"
        android:text="Para a Meta"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/testButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStepsDescription" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="25dp"
        android:text="Test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStepsGoalDescription2" />


</androidx.constraintlayout.widget.ConstraintLayout>